<div class="page-header">
  <h1>Home Manufacturer</h1>

  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: "alert alert-info" %>
  <% end %>

<div class="container">
  <div class="row">
    <div class="col-md-4" id="left-bar">  </div>

    <div class="col-md-6" id="middle">
      <div>
        <% @manufacturers.each do |manufacturer| %>
        <div class="media">
          <div class="media-body">
            <li class="list-group-item"><h4 class="media-heading">Name: <%= manufacturer.name %></h4></li>
            <li class="list-group-item"><h4 class="media-heading">Country: <%= manufacturer.country %></h4></li>
          </div>
        </div>
        <hr/>
        <% end %>
      </div>
    </div>
  </div>
</div>
